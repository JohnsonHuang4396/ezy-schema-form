{
  "name": "vue3-form",
  "version": "0.0.0",
  "type": "module",
  "description": "A data-drive form base on Vue3 and Element Plus",
  "scripts": {
    "build": "vite build",
    "build:core": "gulp -f ./scripts/rebuild-dist.js & pnpm build",
    "rebuild:es": "nodemon --watch ./packages/core --exec \"pnpm remove-dist & pnpm build & pnpm insert-style\" --config \"./nodemon.json\"",
    "remove-dist": "node ./scripts/remove-dist.js",
    "insert-style": "node ./scripts/insert-style.js",
    "ac": "node ./scripts/auto-commit.js",
    "changeset": "changeset",
    "update:version": "changeset version",
    "preinstall": "npx husky install"
  },
  "pnpm": "latest",
  "keywords": [
    "vue",
    "vuejs",
    "Vue3",
    "Element Plus",
    "form"
  ],
  "author": "JohnsonHuang4396",
  "license": "MIT",
  "files": [
    "dist/*.js",
    "types/*.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/JohnsonHuang4396/vue3-form",
  "homepage": "https://github.com/JohnsonHuang4396/vue3-form",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@types/gulp": "^4.0.13",
    "@types/gulp-autoprefixer": "^0.0.34",
    "@types/gulp-sass": "^5.0.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "sass": "^1.64.0",
    "sucrase": "^3.34.0",
    "typescript": "^4.9.5",
    "vite": "^4.4.4",
    "vite-plugin-dts": "^3.3.1",
    "vite-plugin-imp": "^2.4.0"
  },
  "dependencies": {
    "vue": "^3.3.4"
  }
}
